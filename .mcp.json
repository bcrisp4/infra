{
  "mcpServers": {
    "argocd-do-nyc3-prod": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "argocd-mcp@latest", "stdio"],
      "env": {
        "ARGOCD_BASE_URL": "https://argocd-do-nyc3-prod.marlin-tet.ts.net",
        "ARGOCD_API_TOKEN": "${ARGOCD_TOKEN_DO_NYC3_PROD}"
      }
    },
    "grafana-mcp-do-nyc3-prod": {
      "type": "http",
      "url": "https://grafana-mcp-do-nyc3-prod.marlin-tet.ts.net/mcp"
    }
  }
}
